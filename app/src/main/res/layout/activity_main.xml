<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:singleLine="true"
        android:ellipsize="start"
        android:text="" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:maxLines="1"
        android:ellipsize="end"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear"
            style="@style/Operators_Button"
            android:text="C" />

        <Button
            android:id="@+id/division"
            style="@style/Operators_Button"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/number_seven"
            style="@style/Numbers_Button"
            android:text="7"/>

        <Button
            android:id="@+id/number_eight"
            style="@style/Numbers_Button"
            android:text="8"/>

        <Button
            android:id="@+id/number_nine"
            style="@style/Numbers_Button"
            android:text="9"/>

        <Button
            android:id="@+id/multiplication"
            style="@style/Operators_Button"
            android:text="x"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/number_four"
            style="@style/Numbers_Button"
            android:text="4"/>

        <Button
            android:id="@+id/number_five"
            style="@style/Numbers_Button"
            android:text="5"/>

        <Button
            android:id="@+id/number_six"
            style="@style/Numbers_Button"
            android:text="6"/>

        <Button
            android:id="@+id/subtraction"
            style="@style/Operators_Button"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/number_one"
            style="@style/Numbers_Button"
            android:text="1"/>

        <Button
            android:id="@+id/number_two"
            style="@style/Numbers_Button"
            android:text="2"/>

        <Button
            android:id="@+id/number_three"
            style="@style/Numbers_Button"
            android:text="3"/>

        <Button
            android:id="@+id/sum"
            style="@style/Operators_Button"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/point"
            style="@style/Numbers_Button"
            android:text="."/>

        <Button
            android:id="@+id/number_zero"
            style="@style/Numbers_Button"
            android:text="0"/>

        <ImageButton
            android:id="@+id/backspace"
            style="@style/Numbers_Button"
            android:src="@drawable/ic_backspace"
            android:scaleType="center"
            app:tint="@color/black"/>

        <Button
            android:id="@+id/equals"
            style="@style/Operators_Button"
            android:text="="/>

    </LinearLayout>

</LinearLayout>



