<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemes" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Texts">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginEnd">@dimen/texts_margin_end</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="TextExpression" parent="Texts">
        <item name="android:textSize">@dimen/expression_text_size</item>
        <item name="singleLine">true</item>
        <item name="android:ellipsize">start</item>
    </style>

    <style name="TextResult" parent="Texts">
        <item name="android:textSize">@dimen/result_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
    </style>

    <style name="Operators_Button" parent="Button">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Numbers_Button" parent="Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/black</item>
    </style>

</resources>